<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
    	<property name="hibernate.generate_statistics">true</property>
    	<property name="hibernate.hbm2ddl.auto">validate</property>

    	<property name="hibernate.cache.provider_class">restless.realms.server.cache.EhCacheProvider</property>
    	<property name="hibernate.cache.use_second_level_cache">true</property>
    	<property name="hibernate.cache.use_query_cache">true</property>
    	
		<mapping class="restless.realms.server.account.Account" />
		<mapping class="restless.realms.server.achievement.Achievement" />
		<mapping class="restless.realms.server.achievement.AchievementSet" />
