		<mapping class="restless.realms.server.skill.Skillset" />
		<mapping class="restless.realms.server.stash.Stash" />
		<mapping class="restless.realms.server.tip.Tip" />
		<mapping class="restless.realms.server.treasure.ItemChance" />
		<mapping class="restless.realms.server.treasure.TreasureTable" />
    </session-factory>
</hibernate-configuration>
