		<mapping class="restless.realms.server.adventure.map.AdventureMap" />
		<mapping class="restless.realms.server.chat.ChatMessage" />
		<mapping class="restless.realms.server.combat.Combat" />
		<mapping class="restless.realms.server.combat.CombatRound" />
		<mapping class="restless.realms.server.combat.action.CombatAction" />
		<mapping class="restless.realms.server.combat.pvp.PvpCombat" />
		<mapping class="restless.realms.server.combat.pvp.PvpDefenses" />
		<mapping class="restless.realms.server.effect.Effect" />
		<mapping class="restless.realms.server.encounter.Encounter" />
		<mapping class="restless.realms.server.encounter.MobChance" />
		<mapping class="restless.realms.server.equipment.Equipment" />
